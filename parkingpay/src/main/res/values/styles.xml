<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ParkingDialogActivityTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ParkingActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ParkingTitleBarStyle">
        <item name="android:layout_height">@dimen/parking_title_bar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/parking_title_bar_bg_color</item>
        <item name="tb_left_image">@mipmap/parking_btn_title_bar_back_normal</item>
        <item name="tb_title_color">@color/parking_title_bar_text_color</item>
        <item name="tb_action_text_color">@color/parking_title_bar_action_color</item>
    </style>

    <style name="ParkingHorizontalDivideStyle">
        <item name="android:layout_height">@dimen/parking_horizontal_divide_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/parking_divide_color</item>
    </style>

    <style name="ParkingDefaultButtonStyle">
        <item name="android:background">@drawable/parking_btn_default</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ParkingYesButtonStyle">
        <item name="android:background">@drawable/parking_btn_yes</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ParkingNoButtonStyle">
        <item name="android:background">@drawable/parking_btn_no</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ParkingThemeButtonStyle">
        <item name="android:background">@drawable/parking_btn_theme</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>