<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/parking_view_title_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:paddingStart="@dimen/parking_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingEnd="@dimen/parking_horizontal_margin">

        <ImageView
            android:id="@+id/parking_fragment_contact_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/parking_ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/parking_wavpay_parking_pay"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/parking_fragment_contact_logo_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/parking_fragment_contact_logo_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/parking_horizontal_margin"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="@dimen/parking_horizontal_margin"
            android:background="@drawable/parking_bg_contact_us"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="@dimen/parking_vertical_margin"
            android:paddingEnd="30dp"
            android:paddingBottom="40dp"
            app:layout_constraintTop_toBottomOf="@+id/parking_fragment_contact_logo_iv">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/parking_announcement"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay at home."
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Movement Control Order"
                    android:textSize="16dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="until 14th April 2020."
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="#MovementControl #Wavpay Care 4u"
                android:textColor="@color/parking_theme_color"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View
                style="@style/ParkingHorizontalDivideStyle"
                android:layout_marginTop="@dimen/parking_vertical_margin"
                android:layout_marginBottom="@dimen/parking_vertical_margin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/parking_contact_tip"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/parking_bg_contact_us"
            android:padding="4dp"
            android:src="@mipmap/parking_ic_logo_w"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parking_fragment_contact_logo_iv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
