<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingStart="@dimen/parking_horizontal_margin"
    android:paddingEnd="@dimen/parking_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/parking_bg_merchants"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/parking_horizontal_margin"
        android:paddingEnd="@dimen/parking_horizontal_margin">

        <ImageView
            android:id="@+id/parking_item_merchants_logo_iv"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="#ff0000" />

        <TextView
            android:id="@+id/parking_item_merchants_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/parking_horizontal_margin"
            android:text="Dewan Bandaraya"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

    </LinearLayout>


</LinearLayout>