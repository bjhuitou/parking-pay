<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@mipmap/parking_ic_logo_big" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/parking_horizontal_margin"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="@dimen/parking_horizontal_margin"
        android:gravity="center"
        android:text="@string/parking_init_prompt"
        android:textColor="@color/parking_theme_color"
        android:textSize="20dp" />

</LinearLayout>
